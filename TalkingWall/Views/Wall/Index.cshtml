@model Collection<TalkingWall.Domain.WallMessage>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "The Talking Wall";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-1 highlight">
        <div class="h3">The Wall<hr /></div>
        @foreach (var msg in @Model.Reverse())
        {
            <div class="row">
                <div class="row">
                    <div class="h4 col-lg-10 col-lg-offset-1">
                        @msg.Message
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-lg-offset-1 text-muted">
                        @msg.Name
                    </div>
                    <div class="col-lg-4 col-lg-offset-3 text-muted">
                        @msg.TimeStamp
                    </div>
                </div>
            </div>
            <div class="divider" style="color:orangered;">
                <hr style="width:90%; margin-bottom:20px;" />
            </div>
        }


        @section LeftCol {

            <div class="module">
                @* using (Html.BeginForm("Create", "Wall", FormMethod.Post, new { name = "message" })) *@
                <form action="/Wall/Create" method="post" name="WallMessage">
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="container">
                            <legend class="col-lg-offset-1">Post to Wall</legend>
                            <div class="form-group">
                                <div class="col-lg-offset-1">
                                    <textarea class="form-control" placeholder="Message" id="Message" name="message.Message"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-1">
                                    <input type="text" id="Name" class="form-control" placeholder="User Name" name="message.Name">
                                    <input type="submit" style="margin-top: 5px; float: right;" id="PostButton" class="btn btn-success" value="Post">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        }
